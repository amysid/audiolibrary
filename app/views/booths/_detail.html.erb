<div class="modal fade" id="booth-detail-modal" tabindex="-1" aria-labelledby="myModalLabel" style="display: none;" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <button class="close close-L" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('booth_name')%></label>
          <div class="col-md-6">
            <%= @booth.name %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('city')%></label>
          <div class="col-md-6">
            <%= @booth.city %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('communicate_with')%></label>
          <div class="col-md-6">
            <%= @booth.communicate_with %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('address')%></label>
          <div class="col-md-6">
            <%= @booth.address %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('coordinates')%></label>
          <div class="col-md-6">
            <%= booth.latitude %>,<%= booth.longitude%>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('listening')%></label>
          <div class="col-md-6">
            <%= @booth.listening_count %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('status')%></label>
          <div class="col-md-6">
            <%= @booth.status %>
          </div>                           
        </div>

      </div>

    </div>
  </div>
</div>