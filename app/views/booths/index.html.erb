    <!-- Page content-->
    <div class="content-wrapper">
      <div class="content-heading">
        <div class="ml-auto">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="#">Booth</a></li>
            </ol>
          </nav>
        </div>
      </div>
      <!-- START cards box-->
      <div class="row">
        <div class="col-xl-12 col-md-6">
          <!-- START card-->
          <button class="btn btn-labeled btn-secondary-blue btn-lg btn-rdius btn-rdius-13 font-bold" type="button" data-toggle="modal" data-target="#myModal">Add Booth <span class="btn-label btn-label-right"><i class="fa fa-plus"></i></span></button>
          <div class="table-responsive mt-3">
            <table class="table table-bordered table-hover" id="table-ext-1">
              <thead>
                <tr>
                  <th class="text-danger">#</th>
                  <th class="text-danger"><%= t('booth_name')%></th>
                  <th class="text-danger"><%= t('city') %></th>
                  <th class="text-danger"><%= t('address')%></th>
                  <th class="text-danger"><%= t('coordinates')%></th>
                  <th class="text-danger"><%= t('listening')%></th>
                  <th class="text-danger"><%= t('status') %></th>
                  <th class="text-danger"><%= t('last_listening') %></th>
                  <th class="text-danger"><%= t('setting') %></th>
                </tr>
              </thead>
              <tbody>
                <% if @booths.blank? %>
                  <tr><%= t('no_record_present') %></tr>
                <% else %>
                  <% @booths.each_with_index do |booth, i|%>
                    <tr>
                      <td class="text-danger"><%= i%></td>
                      <td><%= booth.name %></td>
                      <td><%= booth.city %></td>
                      <td><%= booth.address %></td>
                      <td><%= booth.latitude %>,<%= booth.longitude%></td>
                      <td><%= booth.listening_count%></td>
                      <td><%= booth.status rescue nil %></td>
                      <td><%= booth.status rescue nil%></td>
                      <td><a href="" data-toggle="modal" data-target="#update-booth"><i class="fa fa-cog fa-2x text-danger"></i></a></td>
                    </tr>
                  <% end %>
                <% end %>
              </tbody>
            </table>
          </div>

          <div class="card-footer">
            <div class="d-flex">
              <div>
                <div class="dataTables_info" id="datatable1_info" role="status" aria-live="polite">Showing 1 to 10 of 57 entries</div>
              </div>
              <div class="ml-auto">
                <nav>
                  <ul class="pagination pagination-sm">
                    <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">4</a></li>
                    <li class="page-item active"><a class="page-link" href="#">5</a></li>
                    <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- END cards box-->
    </div>
