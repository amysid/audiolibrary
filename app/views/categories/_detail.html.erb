  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <button class="close close-L" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('category_name')%></label>
          <div class="col-md-6">
            <%= @category.name %>
          </div>                           
        </div>
        <div class="row">
          <label for="example-text-input" class="col-md-3 col-form-label text-center"><%= t('booth_location')%></label>
