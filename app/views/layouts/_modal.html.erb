              <input class="form-control text-center" type="email" placeholder="Category Name">
            </div>
            
          </div>

          <div class="form-group row">
            <div class="col-md-12 text-center">
              <button class="btn btn-labeled btn-secondary-blue btn-rdius btn-rdius-13 font-bold" type="button">Update <span class="btn-label btn-label-right"><i class="fa fa-sync-alt"></i></span></button>
              <button class="btn btn-labeled btn-secondary-blue btn-rdius btn-rdius-13 font-bold ml-2" type="button">Cancel <span class="btn-label btn-label-right"><i class="fa fa-times"></i></span></button>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>